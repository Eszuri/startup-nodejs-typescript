{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "declaration": false
    },
    "include": [
        "src"
    ]
}
